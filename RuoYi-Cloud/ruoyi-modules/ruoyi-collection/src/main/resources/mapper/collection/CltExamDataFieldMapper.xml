<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.collection.mapper.CltExamDataFieldMapper">
  <resultMap type="CltExamDataField" id="CltExamDataFieldResult">
    <result property="examDataFieldId" column="exam_data_field_id"/>
    <result property="examId" column="exam_id"/>
    <result property="examDataTypeCode" column="exam_data_type_code"/>
    <result property="fieldName" column="field_name"/>
    <result property="dataFieldName" column="data_field_name"/>
    <result property="defaultName" column="default_name"/>
    <result property="isExtend" column="is_extend"/>
    <result property="isNeed" column="is_need"/>
    <result property="baseTypeCode" column="base_type_code"/>
    <result property="orderNum" column="order_num"/>
    <result property="remark" column="remark"/>
    <result property="status" column="status"/>
    <result property="delFlag" column="del_flag"/>
    <result property="createBy" column="create_by"/>
    <result property="createTime" column="create_time"/>
    <result property="updateBy" column="update_by"/>
    <result property="updateTime" column="update_time"/>
  </resultMap>

  <sql id="selectCltExamDataFieldVo">
        select exam_data_field_id, exam_id, exam_data_type_code, field_name, data_field_name, default_name, is_extend, is_need, base_type_code, order_num, remark, status, del_flag,
        create_by, create_time, update_by, update_time from clt_exam_data_field
    </sql>

  <select id="selectCltExamDataFieldList" parameterType="CltExamDataField"
    resultMap="CltExamDataFieldResult">
    <include refid="selectCltExamDataFieldVo"/>
    <where>
      <if test="examId != null  and examId != ''">and exam_id = #{examId}
      </if>
      <if test="examDataTypeCode != null  and examDataTypeCode != ''">and exam_data_type_code =
        #{examDataTypeCode}
      </if>
      <if test="fieldName != null  and fieldName != ''">and field_name like concat('%',
        #{fieldName}, '%')
      </if>
    </where>
    order by order_num
  </select>
  <delete id="removeDataFieldByExamIds">
    delete from clt_exam_data_field where exam_id in
    <foreach collection="list" item="examId" open="(" separator="," close=")">
      #{examId}
    </foreach>
  </delete>
</mapper>
